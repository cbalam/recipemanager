<%= render 'shared/page_title', title: 'All Chefs' %>

<div class="row">
    <div class="col-md-4 offset-4 text-center">
        <%= will_paginate(@things, class: "d-flex justify-content-center", :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>        
    </div>
</div>

<% @chefs.each do |chef| %>
    <div class="row">
        <div class="col-md-4 offset-4 text-center">
            <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
            <h5>Chef name: <%= chef.name %></h5>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-4 offset-4 text-center">
        <%= will_paginate(@things, class: "d-flex justify-content-center", :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>        
    </div>
</div>
