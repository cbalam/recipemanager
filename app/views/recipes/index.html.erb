<%= render 'shared/page_title', title: 'All Recipes' %>
<% @recipes.each do |recipe| %>
    <div class="row">
        <div class="col-md-2">
            <section class="chef_info text-center">
                <%= gravatar_for recipe.chef, size: 100 %>
                <h6>Chef name: <%= recipe.chef.name %></h6>
            </section>
        </div>
        <div class="card bg-light col-md-6">
            <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
            <p><%= recipe.summary %></p>
            <p>
                <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %></small></span>
            </p>
        </div>
        <div class="col-md-4">
            <%= image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture? %>
        </div>
        <hr class="col-12"/>
    </div>
<% end %>