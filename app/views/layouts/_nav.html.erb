 <header>
  <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "My Recipes", root_path, class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "New Recipe", new_recipe_path, class: "nav-link" %>
          </li>
           <li class="nav-item dropdown">
            <%= link_to "#", id: "myAccountMenu", class: "nav-link dropdown-toggle", "data-toggle"=>"dropdown", "role"=>"button", "aria-expanded"=>"false" do  %>
              <%= current_user.name %> <b class="caret"></b>
            <% end %>
            <div class="dropdown-menu" aria-labelledby="myAccountMenu">
              <%= link_to "View Profile", chef_path(current_user), class: "dropdown-item" %>
              <%= link_to "Edit Profile", edit_chef_path(current_user), class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Log out", logout_path, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log in", login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
</header>